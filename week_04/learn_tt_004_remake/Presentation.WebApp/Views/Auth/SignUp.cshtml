@model MemberSignUpForm
@{
    Layout = "_Layout_CenterScreen";
    ViewData["Title"] = "Create Account";
}

<section id="signup">
    <form novalidate method="post" asp-controller="Auth" asp-action="SignUp" enctype="multipart/form-data" >
        
        <h1>@ViewData["Title"]</h1>
        
        @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
        {
            <div class="alert-notification error">
                @ViewBag?.ErrorMessage
            </div>
        }
        
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <div class="field-group">
                <input asp-for="FirstName"/>
                <span asp-validation-for="FirstName"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="LastName"></label>
            <div class="field-group">
                <input asp-for="LastName"/>
                <span asp-validation-for="LastName"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Email"></label>
            <div class="field-group">
                <input asp-for="Email"/>
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <div class="field-group">
                <input asp-for="PhoneNumber"/>
                <span asp-validation-for="PhoneNumber"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Password"></label>
            <div class="field-group">
                <input asp-for="Password"/>
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <div class="field-group">
                <input asp-for="ConfirmPassword"/>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>
        
        @* <div class="form-group"> *@
        @*     <label asp-for="TermsAndConditions"></label> *@
        @*     <input asp-for="TermsAndConditions" type="checkbox"/> *@
        @*     <span asp-validation-for="TermsAndConditions"></span> *@
        @* </div> *@
        
        <div class="form-group">
            <button type="submit" class="btn btn-submit">Create Account</button>
        </div>
        
        <div class="form-footer">
            <span>Already have an account?</span>
            <a asp-controller="Auth" asp-action="Login">Login</a>
        </div>     
    </form>
</section>

@await Html.PartialAsync("_ValidationScripts")