@model LoginViewModel
@{
    Layout = "_CleanLayout";
    ViewData["Title"] = "Login";
}

<section id="login">
    <div class="card-header">
        <h1>@ViewData["Title"]</h1>
    </div>
    
    @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
    {
        <div class="alert-notification error">
            @ViewBag?.ErrorMessage
        </div>
    }
    
    <form asp-controller="Auth" asp-action="Login" method="post" enctype="multipart/form-data" novalidate>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email"/>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password"/>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-submit">Log In</button>
        </div>
        
        <div class="form-footer">
            <span>Don't have an account?</span>
            <a asp-controller="Auth" asp-action="SignUp">Sign Up</a>
        </div>
    </form>
</section>